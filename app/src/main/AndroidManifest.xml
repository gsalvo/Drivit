<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cl.blackbirdhq.drivit" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/CustomThemeMA"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".PresentationClassB"
            android:label="@string/labelPresentationClassB"
            android:parentActivityName=".MainActivity" >
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".PresentationClassC"
            android:label="@string/labelPresentationClassC"
            android:parentActivityName=".MainActivity" >
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".Conditions"
            android:label="@string/labelConditions"
            android:parentActivityName=".MainActivity" >
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".Gratitude"
            android:label="@string/labelGratitude"
            android:parentActivityName=".MainActivity" >
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".Question"
            android:label="@string/labelQuestion"
            android:parentActivityName=".PresentationClassB" >
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".Results"
            android:label="@string/title_activity_results"
            android:parentActivityName=".PresentationClassB" >
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".NavQuestionContent"
            android:label="@string/labelNavQuestion"
            android:parentActivityName=".Question" >
        </activity>
    </application>

    <!--  Internet Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />

</manifest>
