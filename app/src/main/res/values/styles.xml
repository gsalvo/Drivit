<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <!-- Action Bar-->
        <item name="colorPrimary">@color/actionBarColor</item>
        <!-- Backgorund -->
        <item name="android:windowBackground">@color/defaultBackground</item>
        <!--Button-->
        <item name="colorButtonNormal">@color/defaultButton</item>
    </style>

    <!--MainActivity style-->
    <style name="CustomThemeMA" parent="Theme.AppCompat.Light.NoActionBar">
        <!--ActionBar-->
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/defaultBackground</item>
        <!--<item name="android:colorBackground">@color/background_app</item>-->
        <!--Button-->
        <item name="colorButtonNormal">@color/defaultButton</item>
    </style>


    <!--ButtonStyle -->
    <style name="buttonStyle">
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">280dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/whiteText</item>
    </style>
    <!--CircularButton -->
    <style name="circularButton">
        <item name="android:background">@drawable/round_button</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_width">70dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/whiteText</item>
        <item name="android:padding">11dp</item>
    </style>
    <!-- -->
    <style name="navButton">
        <item name="android:background">@drawable/nav_button</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
    </style>
</resources>
