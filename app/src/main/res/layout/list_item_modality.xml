<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/item_modality_background">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:id="@+id/iconModality"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingRight="15dp"
            android:text="Título modalidad"
            android:textStyle="bold"
            android:id="@+id/textModality"
            android:textSize="12sp"
            android:textColor="@color/GreenText"/>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingRight="15dp"
            android:text="Descripción de la modalidad"
            android:id="@+id/descriptionModality"
            android:textSize="10sp"
            android:textColor="@color/PeaGreenText"/>

    </LinearLayout>
</LinearLayout>