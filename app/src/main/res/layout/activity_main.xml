<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    android:weightSum="7"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="4"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@color/actionBarColor">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="@string/app_name"
            android:id="@+id/textNamePresentation"
            android:textColor="@color/whiteText"
            android:textSize="50sp"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-35dp"
        android:layout_marginBottom="-35dp"
        android:gravity="center">
        <Button
            style="@style/circularButton"
            android:layout_marginRight="35dp"
            android:drawableLeft="@drawable/ic_directions_car_white_48dp"
            android:id="@+id/btnClassB"/>
        <Button
            style="@style/circularButton"
            android:layout_marginLeft="35dp"
            android:drawableLeft="@drawable/ic_motorbike_48dp"
            android:id="@+id/btnClassC"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="3"
        android:background="@color/defaultBackground"
        android:layout_marginTop="35dp"
        android:padding="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/textPresentation"
            android:id="@+id/textPresentation"
            android:textColor="@color/PeaGreenText"
            android:gravity="center"
            android:textSize="13sp"
            />

        <Button
            style="@style/buttonStyle"
            android:text="@string/btnCondition"
            android:id="@+id/button"/>

        <Button
            style="@style/buttonStyle"
            android:text="@string/btnGratitude"
            android:id="@+id/button2"/>
    </LinearLayout>
</LinearLayout>
