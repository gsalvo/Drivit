<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:weightSum="7"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_weight="4"
        android:background="@color/actionBarColor"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textNamePresentation"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="@color/whiteText"
            android:textSize="50sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-35dp"
        android:layout_marginTop="-35dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnClassB"
            style="@style/circularButton"
            android:layout_marginRight="35dp"
            android:drawableLeft="@drawable/ic_directions_car_white_48dp"
            android:onClick="goPresentationClassB" />

        <Button
            android:id="@+id/btnClassC"
            style="@style/circularButton"
            android:layout_marginLeft="35dp"
            android:drawableLeft="@drawable/ic_motorbike_48dp"
            android:onClick="goPresentationClassC" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="35dp"
        android:layout_weight="3"
        android:background="@color/defaultBackground"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/textPresentation"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/textPresentation"
            android:textColor="@color/PeaGreenText"
            android:textSize="13sp" />

        <Button
            android:id="@+id/btnConditions"
            style="@style/buttonStyle"
            android:onClick="goConditions"
            android:text="@string/btnCondition" />

        <Button
            android:id="@+id/btnGratitude"
            style="@style/buttonStyle"
            android:onClick="goGratitude"
            android:text="@string/btnGratitude" />
    </LinearLayout>
</LinearLayout>