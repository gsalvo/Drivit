<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cl.blackbirdhq.drivit.Question">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:id="@+id/viewTimer">

        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:text="1"
            android:background="@color/defaultButton"
            android:textColor="@color/whiteText"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="16sp"
            android:id="@+id/numberQuestion"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="35:00"
            android:background="@color/defaultButton"
            android:textColor="@color/whiteText"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="16sp"
            android:drawableLeft="@drawable/ic_timer_white_24dp"
            android:id="@+id/time"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/contentFragment"
        android:layout_below="@+id/viewTimer"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/contentButtonNav"></RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/actionBarColor"
        android:weightSum="2"
        android:id="@+id/contentButtonNav">

        <ImageButton
            style="@style/navButton"
            android:id="@+id/btnPrev"
            android:src="@drawable/ic_navigate_before_white_36dp"
            />
        <ImageButton
            style="@style/navButton"
            android:id="@+id/btnNext"
            android:src="@drawable/ic_navigate_next_white_36dp"/>
    </LinearLayout>




</RelativeLayout>
